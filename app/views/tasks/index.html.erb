<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <p><%= current_user.name %> としてログイン中</p>
  
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> (<%= task.status %>)</li>
    <% end %>
  </ul>
  
  <%= paginate @tasks %>
  
  <%= link_to '新規タスクの登録', new_task_path %>
  <%= link_to 'ログアウト', session_path(id: current_user), method: :delete %>

  
<% end %>